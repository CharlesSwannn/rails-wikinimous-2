<h1>All the articles</h1> <h1><%= link_to "+", new_article_path, style:"text-decoration:none; color:black" %></h1>

<% @articles.each do |article| %>
  <%= link_to article_path(article) do %>
    <h2><em><%= article.title %></em></h2>
  <% end %>
  <%= link_to article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash-can"></i>
  <% end %>
  <p><%= article.content %></p>
<% end %>
